    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: MusicFileSync",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/musicfilesync",
            "args": [
                "--from",
                "~/Music",
                "--to",
                "/tmp/copy",
                "--genres",
                "bugg,boogie"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
